{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom"
    ]
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}